<section class="login flex justify-center pt-24">
  <div class="w-full max-w-sm">
    <form
      class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
      method="post"
      action="/register"
    >
      <% if(messages.error) { %>
      <span class="text-red-500 text-sm"><%= messages.error %></span>
      <% } %>
      <div class="mb-4">
        <label class="block tyext-gray-700 text-sm font-bold mb-2" for="name"
          >Name</label
        >
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="name"
          autocomplete="off"
          type="text"
          name="name"
          value="<%=messages.name%>"
          placeholder="Enter Your Name"
        />
      </div>
      <div class="mb-4">
        <label class="block tyext-gray-700 text-sm font-bold mb-2" for="email"
          >Email</label
        >
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="email"
          name="email"
          autocomplete="off"
          type="email"
          value="<%=messages.email%>"
          placeholder="Enter Your Email"
        />
      </div>
      <div class="mb-6">
        <label
          class="block tyext-gray-700 text-sm font-bold mb-2"
          for="password"
          >Password</label
        >
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="password"
          name="password"
          autocomplete="off"
          type="password"
          placeholder="Password"
        />
      </div>
      <div class="flex items-center justify-between">
        <button
          class="btn-primary hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline"
          type="submit"
        >
          Create Account
        </button>
        <a href="/login" class="inline-block align-baseline font-bold text-sm"
          >Already Have Account?</a
        >
      </div>
    </form>
    <p class="text-center text-gray-500 text-xs">
      &copy; 2022 Real Time Pizza Booking. All Right Reserved.
    </p>
  </div>
</section>
